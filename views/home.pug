extends layout

block content
  h1 Intership Project
  p.lead An intership project at <b>SYNC INTERN'S</b>.
  hr
  .row
    .col-md-6
      div.row.justify-content-between
        div.col-6
          h3
            | Projects
        div.col-6.text-end
          a(href='/project/new', class='btn btn-outline-primary')
            | Add Project
      br
      table(class='table table-striped table-bordered')
        thead
          tr
            th.text-center Name
            th.text-center Description
            th.text-center Team #
            th.text-end
        tbody
          if projects.length <= 5
            each project in projects
              tr
                td= project.name
                td= project.description
                td.text-center= project.team.length
                td.text-end
                  a.btn.btn-outline-primary(href='/project/?id=' + project.id)
                    | View
          else
            each project in projects.slice(0,5)
              tr
                td= project.name
                td= project.description
                td.text-center= project.team.length
                td.text-end
                  a.btn.btn-outline-primary(href='/project?id=' + project.id)
                    | View
            tr
                td.text-center(colspan="4")
                  a(href='/project/all')= projects.length-5 + ' more projects Click to view all'
    .col-md-6
      h3
        | My Tickets
      br
      table(class='table table-striped table-bordered')
          thead
            tr
              th Title
              th Description
              th Priority
              th Status
              th Type
              th
          tbody
            if tickets.length <= 5
              each ticket in tickets
                tr
                  td= ticket.title
                  td= ticket.description
                  td= ticket.priority
                  td= ticket.status
                  td= ticket.type
                  td
                    a.btn.btn-outline-primary.btn-sm(href='/myTickets')
                      | View
            else
              each ticket in tickets.slice(0,5)
                tr
                  td= ticket.title
                  td= ticket.description
                  td= ticket.priority
                  td= ticket.status
                  td= ticket.type
                  td
                    a.btn.btn-outline-primary.btn-sm(href='/myTickets')
                      | View
              tr
                  td.text-center(colspan="4")
                    a(href='/myTickets')= tickets.length-5 + ' more Tickets Click to view all'
