extends ../layout

block content
  .row
    .col-md-8
      h1
        | Project
        small.text-muted
          |  #{project.name}
      p.lead #{project.description}
    .col.text-end
      a.btn.btn-outline-primary(href='/project/edit?id=' + project.id)
        | Edit
      a.btn.btn-danger(href='/project/delete?id=' + project.id)
        | Delete
    hr
  .row
    .col-md-6
      div.row.justify-content-between
        div.col-4
          h3
            | Tickets
        div.col-4.text-end
          a(href='/project/addTicket?id=' + project.id, class='btn btn-outline-primary-primary')
            | Add ticket
      table(class='table table-striped table-bordered')
            thead
              tr
                th Title
                th Description
                th Priority
                th Status
                th Type
                th
            tbody
              each ticket in project.tickets
                tr
                  td= ticket.title
                  td= ticket.description
                  td= ticket.priority
                  td= ticket.status
                  td= ticket.type
                  td
                    a.btn.btn-outline-primary.btn-sm(href='/ticket/?pid=' + project.id + '&tid=' + ticket.id)
                      | View
    .col-md-6
      div.row.justify-content-between
        div.col-4
          h3
            | Team
        div.col-4.text-end
          a(href='/project/addMember?id=' + project.id, class='btn btn-outline-primary')
            | Add member
      table(class='table table-striped table-bordered')
            thead
              tr
                th Name
                th Email
                th Role
            tbody
              each member in project.team
                tr
                  td= member.name
                  td= member.email
                  td= member.role